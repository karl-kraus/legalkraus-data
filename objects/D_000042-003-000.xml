             facs="#D_000042-003-000-facs001-l001-p002"
             n="2"/>
         <p xml:id="uuid_e16180fb-fd01-45c5-be49-42236a3a7b00">
            <lb xml:id="uuid_7a09d062-d9ef-4de0-9f2f-5124d8ae880d"/><note type="paratext" resp="law-firm"><rs ref="#pmb11988" type="person">Kraus</rs> – <rs ref="#pmb29470" type="institution">Stunde</rs>
               <rs ref="#pmb37843" type="person">
                  <del>Bekessy</del>
               </rs> Dir.<lb xml:id="uuid_bbd5669c-ba55-451c-b4b0-3791e9c8e641"/>6. Mai 1927</note>
         </p>
